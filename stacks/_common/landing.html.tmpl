    <style>
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
        :root {
            --bg-primary: #0a0a0f;
            --bg-surface: #111119;
            --bg-elevated: #1a1a25;
            --border: #1e1e2e;
            --cyan: #00d4ff;
            --green: #00ff88;
            --text-primary: #f0f0f0;
            --text-secondary: #94a3b8;
            --text-muted: #64748b;
            --font-mono: 'Courier New', monospace;
            --glow-cyan: rgba(0, 212, 255, 0.15);
            --glow-green: rgba(0, 255, 136, 0.15);
        }
        body {
            font-family: var(--font-mono);
            background: var(--bg-primary);
            color: var(--text-primary);
            line-height: 1.6;
            min-height: 100vh;
            background-image:
                radial-gradient(ellipse at 20% 0%, rgba(0,212,255,0.03) 0%, transparent 50%),
                radial-gradient(ellipse at 80% 100%, rgba(0,255,136,0.03) 0%, transparent 50%);
        }
        .landing { max-width: 820px; margin: 0 auto; padding: 2rem 1.5rem 3rem; }

        /* -- Header -- */
        .landing-header { text-align: center; padding: 3rem 0 2.5rem; }
        .landing-title {
            font-size: 2.4rem; font-weight: 700; margin-bottom: 0.75rem;
            letter-spacing: -0.02em;
            background: linear-gradient(135deg, var(--cyan), var(--green));
            -webkit-background-clip: text; -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        .landing-badges { display: flex; justify-content: center; gap: 0.75rem; flex-wrap: wrap; margin-bottom: 1.25rem; }
        .badge {
            display: inline-flex; align-items: center; gap: 0.375rem;
            padding: 0.3rem 0.85rem; border-radius: 999px;
            font-size: 0.75rem; font-weight: 600; letter-spacing: 0.04em;
        }
        .badge-stack { background: rgba(0,212,255,0.08); color: var(--cyan); border: 1px solid rgba(0,212,255,0.25); }
        .badge-status { background: rgba(0,255,136,0.08); color: var(--green); border: 1px solid rgba(0,255,136,0.25); }
        .status-dot {
            display: inline-block; width: 7px; height: 7px; border-radius: 50%;
            background: var(--green);
            box-shadow: 0 0 6px var(--green);
            animation: pulse 2s ease-in-out infinite;
        }
        @keyframes pulse { 0%, 100% { opacity: 1; } 50% { opacity: 0.4; } }
        .landing-description { color: var(--text-secondary); font-size: 0.95rem; max-width: 500px; margin: 0 auto; }

        /* -- Shared -- */
        .divider { border: none; height: 1px; background: linear-gradient(90deg, transparent, var(--border), transparent); margin: 2rem 0; }
        .section { margin-bottom: 2rem; }
        .section-title {
            font-size: 0.7rem; font-weight: 700; text-transform: uppercase;
            letter-spacing: 0.15em; color: var(--cyan); margin-bottom: 1rem;
        }
        .card {
            background: var(--bg-surface);
            border: 1px solid var(--border);
            border-radius: 10px;
            padding: 1.25rem 1.5rem;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            border-color: rgba(0,212,255,0.3);
            box-shadow: 0 0 20px rgba(0,212,255,0.06);
        }

        /* -- File tree -- */
        .file-tree { list-style: none; }
        .file-tree li {
            display: flex; align-items: baseline; gap: 0.75rem;
            padding: 0.45rem 0;
            border-bottom: 1px solid rgba(30,30,46,0.6);
            font-size: 0.85rem;
        }
        .file-tree li:last-child { border-bottom: none; }
        .tree-prefix { color: var(--text-muted); user-select: none; min-width: 24px; }
        .file-name { color: var(--cyan); white-space: nowrap; min-width: 150px; }
        .file-desc { color: var(--text-secondary); font-size: 0.8rem; }

        /* -- Steps -- */
        .steps { list-style: none; counter-reset: step; }
        .steps li {
            counter-increment: step;
            display: flex; align-items: flex-start; gap: 1rem;
            padding: 0.6rem 0;
        }
        .steps li::before {
            content: counter(step);
            display: flex; align-items: center; justify-content: center;
            min-width: 28px; height: 28px; border-radius: 50%;
            background: var(--glow-cyan); color: var(--cyan);
            font-size: 0.75rem; font-weight: 700;
            border: 1px solid rgba(0,212,255,0.25);
            flex-shrink: 0; margin-top: 0.1rem;
        }
        .step-text { color: var(--text-secondary); font-size: 0.85rem; line-height: 1.6; }
        .step-text code {
            background: rgba(0,212,255,0.07); color: var(--cyan);
            padding: 0.15em 0.45em; border-radius: 4px; font-size: 0.8rem;
        }

        /* -- Endpoints -- */
        .endpoint-method {
            color: var(--green); font-weight: 600; min-width: 40px;
        }

        /* -- Pipeline -- */
        .pipeline {
            display: flex; align-items: center; gap: 0;
            justify-content: center; flex-wrap: wrap; padding: 0.5rem 0;
        }
        .pipeline-step {
            display: flex; align-items: center; gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: var(--bg-elevated);
            border: 1px solid var(--border);
            border-radius: 6px;
            font-size: 0.78rem;
            color: var(--text-secondary);
        }
        .pipeline-step .icon { font-size: 1rem; }
        .pipeline-arrow { color: var(--text-muted); font-size: 1.1rem; padding: 0 0.3rem; }

        /* -- Architecture -- */
        .arch-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 0.75rem; }
        .arch-item { text-align: center; padding: 1rem 0.5rem; }
        .arch-icon { font-size: 1.5rem; margin-bottom: 0.4rem; }
        .arch-label { font-size: 0.75rem; color: var(--cyan); font-weight: 600; margin-bottom: 0.25rem; }
        .arch-desc { font-size: 0.72rem; color: var(--text-muted); }

        /* -- Footer -- */
        .landing-footer {
            text-align: center; padding: 1.5rem 0 0;
            border-top: 1px solid var(--border); margin-top: 2.5rem;
        }
        .footer-text { font-size: 0.75rem; color: var(--text-muted); }
        .footer-link { color: var(--cyan); text-decoration: none; }
        .footer-link:hover { text-decoration: underline; }

        /* -- Responsive -- */
        @media (max-width: 640px) {
            .landing { padding: 1.25rem 1rem 2rem; }
            .landing-header { padding: 2rem 0 1.5rem; }
            .landing-title { font-size: 1.6rem; }
            .file-tree li { flex-direction: column; gap: 0.15rem; }
            .file-name { min-width: auto; }
            .pipeline { flex-direction: column; gap: 0.5rem; }
            .pipeline-arrow { transform: rotate(90deg); }
            .card { padding: 1rem; }
            .arch-grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
